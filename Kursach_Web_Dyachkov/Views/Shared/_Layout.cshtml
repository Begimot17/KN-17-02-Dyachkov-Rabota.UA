<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Kursovoy Project</title>
    @Styles.Render("~/Content/css")
</head>
<body style="padding-top: 0px">
    <div class="navbar navbar-dark bg-dark align-text-top">
        @Html.ActionLink("Rabota.UA", "Index", "Work", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li>@Html.ActionLink("Мой профиль", "MyProfile", "Work", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Мои объявления", "MyAnnoun", "Work", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Создать объявление", "Create", "Work", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Работники", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Зарегистрироваться", "Create", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Выйти", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="page-footer font-small blue">
            <div class="footer-copyright text-center py-3">
                © 2020 Copyright: Dyachkov
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
