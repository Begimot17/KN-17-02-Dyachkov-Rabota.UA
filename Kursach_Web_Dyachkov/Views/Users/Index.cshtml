@using Kursach_Web_Dyachkov.Models
@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Работники</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Фамилия")
        </th>
        <th>
            @Html.DisplayName("Имя")
        </th>
        <th>
            @Html.DisplayName("Возраст")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Мобильный номер")
        </th>
        <th>
            @Html.DisplayName("Профессия")
        </th>
        <th>
            @Html.DisplayName("Регион")
        </th>
        <th>
            @Html.DisplayName("Резюме")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Age)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumberPhone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Profession.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Region.Name)
    </td>
    @if (item.Summary != null)
    {
        <td>
            @Html.ActionLink("Посмотреть", "Details", new { id = item.Id })
        </td>
    }

</tr>
    }

</table>
